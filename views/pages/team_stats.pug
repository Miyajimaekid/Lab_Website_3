//- team_stats.pug
include ../partials/header.pug
include ../partials/menu.pug

div.container
  br
  div.jumbotron
    h1.display-4 Fall 2018 Stats
    p.lead CU Football Statistics for the 2018 Football Season!
  table.table.table-bordered#stats_table
    tr
      th.align-bottom(rowspan="2") Game Date
      th.align-bottom(rowspan="2") Opposing Team Name
      th.text-center(colspan="2") Score
      th.align-bottom(rowspan="2") Winner
    tr
      th Home Score
      th Opp. Score
    - if(result_1)
    for n in result_1
      tr
        td.align-bottom(rowspan="2")= n.game_date
        td.align-bottom(rowspan="2")= n.visitor_name
        td.text-center(colspan="2")
        if(n.visitor_score < n.home_score)
          td.align-bottom(rowspan="2") CU Boulder
        else
          td.align-bottom(rowspan="2")= n.visitor_name
      tr
        td= n.home_score
        td= n.visitor_score

  br

  table.table.text-center
    tr
      th Wins
      th Losses
    tr
      - if(result_2)
      td= result_2[0].count
      - if(result_3)
      td= result_3[0].count

include ../partials/footer.pug
